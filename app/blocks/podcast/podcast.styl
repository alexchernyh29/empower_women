.podcast
    padding 0 w(155) 0 w(185)
    position relative

    &__wrap
        width w(1500)
        height w(875)
        img
            width 100%

    &__promo-text
        position absolute
        top w(150)
        font-family $ff-Kaspersky
        font-style normal
        font-weight 400
        font-size w(60)
        line-height w(71)
        color #FFFFFF
        transform rotate(-90deg)

    &__title
        position absolute
        left w(560)
        top w(620)
        font-family $ff-Kaspersky
        font-style normal
        font-weight 400
        font-size w(102)
        line-height w(84)
        color #FFFFFF
        text-align center

    &__button
        position absolute
        left w(800)
        top w(820)
        width w(200)
        height w(50)
        background-color #1D1D1B
        box-shadow 0 w(8) w(32) rgba(0, 95, 80, 0.52)
        border-radius w(3)
        font-family $ff-Kaspersky
        font-weight 400
        font-size w(16)
        line-height w(20)
        color $c-white