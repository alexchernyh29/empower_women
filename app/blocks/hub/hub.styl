.hub
    padding 0 w(410) w(70) w(450)
    color #EBF5F5
    position relative

    &__text-section
        position absolute
        top w(175)
        left w(200)    
        font-family $ff-Kaspersky
        font-style normal
        font-weight 400
        font-size w(54)
        line-height w(56)
        color $c-grey
        transform rotate(-90deg)

    &__wrap-number
        position absolute
        left w(370)
        top w(1025)
        display flex
        flex-direction row
        &:nth-child(2)
            top w(475)

    &__wrap_up
        padding-top w(200)
        display flex
        flex-direction row
        justify-content flex-start

    &__wrap_down
        padding-top w(45)
        display flex
        flex-direction row
        justify-content flex-start

    &__block
        padding-left 0
        &:nth-child(2)
            padding-left w(35)

    &__text-number
        font-family $ff-Kaspersky
        font-style normal
        font-weight 400
        font-size w(79)
        line-height w(93)
        color $c-grey
        &:nth-child(2)
            padding-left w(320)

    &__title
        padding w(25) 0 0 w(35)
        font-family $ff-Kaspersky
        font-style normal
        font-weight 400
        font-size w(24)
        line-height w(26)
        text-decoration-line underline
        color $c-black

    &__text
        padding w(10) 0 0 w(35)
        font-family $ff-Kaspersky
        font-style normal
        font-weight 400
        font-size w(16)
        line-height w(19)
        color $c-grey_1

    &__image
        width w(420)
        img
            width 100%

    &__text-news
        padding-right w(10)
        font-family $ff-Kaspersky
        font-style normal
        font-weight 400
        font-size w(18)
        line-height w(24)
        display flex
        align-items center
        color $c-green

    &__news_wrap
        padding-top w(20)
        padding-right w(160)
        display flex
        flex-direction row
        justify-content flex-end

    &__arrow
        padding-top w(3)
        width w(15)
        img
            width 100%